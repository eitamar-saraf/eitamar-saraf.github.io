---
import cvData from '../content/cv.json';
---

<main class="max-w-2xl mx-auto py-16 px-4">
  <h1 class="text-3xl font-bold mb-4">Curriculum Vitae</h1>
  <p class="mb-4">{cvData.summary}</p>
  <ul class="mb-4">
    <li><strong>Name:</strong> {cvData.name}</li>
    <li><strong>Title:</strong> {cvData.title}</li>
    <li><strong>Email:</strong> {cvData.email}</li>
    <li><strong>Location:</strong> {cvData.location}</li>
  </ul>
  <h2 class="text-xl font-semibold mt-8 mb-2">Skills</h2>
  <ul class="mb-4">
    {cvData.skills.map(skill => <li>{skill}</li>)}
  </ul>
  <h2 class="text-xl font-semibold mt-8 mb-2">Links</h2>
  <ul>
    {cvData.links.map(link => (
      <li><a href={link.url} class="text-blue-600 hover:underline">{link.label}</a></li>
    ))}
  </ul>
</main>
